<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/sf_ui_display_reguler</item>
    </style>

    <style name="MyDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="MyParentType">
        <item name="android:layout_marginBottom">@dimen/parent_content_no_scroll</item>
        <item name="android:layout_marginEnd">@dimen/parent_content_no_scroll</item>
        <item name="android:layout_marginStart">@dimen/parent_content_no_scroll</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyParentTypeCardEdge">
        <item name="android:padding">@dimen/parent_content_no_scroll_card_edge</item>
        <item name="android:layout_marginLeft">@dimen/parent_content_no_scroll_card_edge</item>
        <item name="android:layout_marginRight">@dimen/parent_content_no_scroll_card_edge</item>
        <item name="android:layout_marginBottom">@dimen/parent_content_no_scroll_card_edge</item>
        <item name="android:background">@drawable/mygzn_card_edge</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyAppbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="MyMaterialToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="MyCostumToolbarImage">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
    </style>

    <style name="MyCostumToolbarTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
    </style>

    <style name="MyCostumToolbarMenus">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="MyOptionMenu">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_margin</item>
    </style>

    <style name="MyTopHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/mygzn_background_sub_header</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="MyTopHeaderCardEdge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:background">@drawable/mygzn_background_sub_header</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="MyTextHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_header</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>

    <style name="MyTextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="MyTextInputLayoutOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_between_edittext</item>
    </style>

    <style name="MyTextInputLayoutOutlinedBoxNext" parent="MyTextInputLayoutOutlinedBox">
        <item name="android:layout_marginTop">@dimen/space_between_edittext</item>
    </style>

    <style name="MyTextInputLayoutFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_between_edittext_filled</item>
    </style>

    <style name="MyTextInputLayoutFilledBoxNext" parent="MyTextInputLayoutFilledBox">
        <item name="android:layout_marginTop">@dimen/space_between_edittext_filled</item>
    </style>

    <style name="MyParentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_between_edittext</item>
    </style>

    <style name="MyButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MyButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MyButtonContained">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MyButtonIcon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MyTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="MyBottomNavigationView">
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyParentTakeFoto">
        <item name="android:layout_marginTop">@dimen/space_take_foto</item>
    </style>

    <style name="MyParentSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_spinner_normal</item>
    </style>
    <!--revisi-->
    <style name="MyAutoCompleteTextViewFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_spinner</item>
    </style>

    <style name="MyAutoCompleteTextViewOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_spinner</item>
    </style>

    <style name="MyAutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="MyParentRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_radio_group</item>
    </style>

    <style name="MyRadioGroupText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_between_radio_button</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="MyRadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_radio_button</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">-5dp</item>
    </style>

    <style name="MyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="MyTextEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_between_edit_text</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="MyEditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:layout_marginStart">-4dp</item>
        <item name="android:layout_marginEnd">-4dp</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:inputType">textImeMultiLine</item>
        <item name="android:lines">3</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="MyEditText_Horizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">-4dp</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:inputType">textImeMultiLine</item>
        <item name="android:lines">3</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="MyCheckBoxText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_between_check_box</item>
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/h3</item>
    </style>

    <style name="MyParentCheckBox">
        <item name="android:layout_marginTop">@dimen/space_between_check_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MyCheckBox">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:layout_marginStart">-7dp</item>
    </style>

    <style name="MyCheckBox_Horizontal">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="MyImageFoto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyImageFotoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/take_foto</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/h5</item>
    </style>

    <style name="MyTextRequired">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/required</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:textColor">@color/red_500</item>
    </style>

    <style name="MyImageFotoPreview">
        <item name="android:layout_width">@dimen/img_display</item>
        <item name="android:layout_height">@dimen/img_display</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/def_margin_half</item>
        <item name="android:background">@drawable/mygzn_image_preview</item>
        <item name="android:src">@drawable/mygzn_image_preview_icon</item>
    </style>

    <style name="MySpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyTakeImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
